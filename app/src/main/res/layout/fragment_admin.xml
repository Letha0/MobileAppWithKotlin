<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/fragment_admin"
    tools:context=".activities.AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/management_panel"
                    android:textSize="36sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/btn_authors"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/authors"
                    android:text="Authors"
                    android:onClick="btnAuthors"/>

                <Button
                    android:id="@+id/btn_books"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/books"
                    android:text="Books"
                    android:onClick="btnBooks"/>

                <Button
                    android:id="@+id/btn_opinions"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/opinions"
                    android:text="opinion"
                    android:onClick="btnOpinions"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_genres"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/genres"
                    android:text="Genres"
                    android:onClick="btnGenres"/>

                <Button
                    android:id="@+id/btn_orders"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/orders"
                    android:text="Orders"
                    android:onClick="btnOrders"/>

                <Button
                    android:id="@+id/btn_payments"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/payments"
                    android:text="Payments"
                    android:onClick="btnPayments"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/btn_publhouses"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/publhouse"
                    android:text="Publishing Houses"
                    android:onClick="btnPublHouse"/>

                <Button
                    android:id="@+id/btn_series"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/series"
                    android:text="Series"
                    android:onClick="btnSeries"/>

                <Button
                    android:id="@+id/btn_covertypes"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/covertypes"
                    android:text="Cover Types"
                    android:onClick="btnCoverType"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <Button
                    android:id="@+id/btn_users"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/users"
                    android:onClick="btnUsers"
                    android:text="Users" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/logout"
                    android:onClick="logout"
                    android:text="Logout"/>

                <Button
                    android:id="@+id/btn12"
                    android:layout_width="0dip"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:text="Click without consequences ;)"
                    android:onClick="home"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>